{
  "npm.packageManager": "pnpm",
  "files.exclude": {
    ".editorconfig": true,
    ".idea": true,
    ".git": true,
    ".npmrc": true,
    ".vercel": true,
    "vercel.json": true,
    "pnpm-lock.yaml": true,
    "**/.turbo": true,
    "**/LICENSE": true,
    "**/*.map": {
      "when": "$(basename)"
    },
    "**/*.js": {
      "when": "$(basename).d.ts"
    },
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.cjs": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "color-highlight.markerType": "underline",
  "lit-plugin.rules.no-invalid-css": "off",
  "lit-plugin.rules.no-incompatible-type-binding": "off"
}
