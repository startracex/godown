{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["@startracex/dev-config/biome"],
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["**/*.ts"]
  },
  "formatter": {
    "enabled": false
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "useTopLevelRegex": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "fix": "none",
          "options": {
            "allow": ["info", "warn", "error"]
          }
        }
      }
    }
  }
}
