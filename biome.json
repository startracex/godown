{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "extends": ["@startracex/dev-config/biome"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.tsx"]
  },
  "formatter": {
    "enabled": false
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "error",
          "fix": "none",
          "options": {
            "allow": ["info", "warn", "error"]
          }
        }
      }
    }
  }
}
