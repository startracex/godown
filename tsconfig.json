{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "allowJs": false,
    "rootDir": "./src",
    "outDir": "./public",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "importHelpers": true,
    "sourceRoot": "https://github.com/startracex/godown/tree/main/src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
